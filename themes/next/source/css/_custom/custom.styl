// Custom styles.

p, ul {
  margin: 0;
}

.site-author-image {
  border-radius: 50%;
}

//canvas
html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

canvas {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.brand {
  background: initial;
}

.menu .menu-item a {
  color: #fff;
}

.menu .menu-item a:hover {
  color: #d43f3a;
  border-bottom-color: #d43f3a;
}

.page-home .posts-expand {
  padding: 40px 0 0;
  margin-bottom: 0;
  background: none;
  box-shadow: none;
}

.post-type-normal,
.posts-expand {
  padding: 25px;
  margin-bottom: 100px;
  background: #fff;
  box-shadow: 0 0 10px #fff;
}

.comments {
  margin: 60px 0 0;
}

.post-wordcount {
  display: block;
}

code {
  margin: 0 5px;
}

//react图片
.posts-expand .post-body .react-img {
  border-radius: 50%;
  border-color: #999;
  box-shadow: 0 0 10px #000;
  background: #000;
  animation: App-logo-spin infinite 20s linear;
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0)
  }
  to {
    transform: rotate(360deg)
  }
}

//评论
.comments {
  margin-top: -160px;
  padding: 20px;
  background: #fff;
  box-shadow: 0 0 10px #fff;
}

//底部标签
a.footer-tags {
  padding: 0 10px;
  background: #eeeeee78;
  border-radius: 4px;
}

.bg-night {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.bg-night img {
  width: 100%;
  height: 100%;
}
